{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node16",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "vitest/globals"
        ],
        "rootDir": "./",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ]
}