{
  "name": "@localtaskrepo/lotar",
  "version": "0.1.0",
  "description": "A task and project management tool that runs locally and can be synced via repo",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cargo build --release",
    "preview": "vite preview",
    "test:ui": "vitest",
    "test:ui:run": "vitest run",
    "test": "cargo nextest run --release",
    "clean": "cargo clean && rm -rf node_modules target/web",
    "clean:all": "npm run clean"
  },
  "keywords": [
    "local",
    "task",
    "project",
    "repo",
    "management",
    "todo"
  ],
  "author": "Ravi Gairola <mallox@pyxzl.net>",
  "license": "ISC",
  "dependencies": {
    "chart.js": "^4.5.0",
    "vue": "^3.5.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^25.0.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  }
}
